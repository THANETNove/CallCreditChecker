{
  "expo": {
    "name": "CallCreditChecker",
    "slug": "CallCreditChecker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow $(PRODUCT_NAME) to access your contacts."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan barcodes on event tickets.",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "NSContactsUsageDescription": "Allow $(PRODUCT_NAME) to access your contacts."
      },
      "bundleIdentifier": "com.ththanet.CallCreditChecker"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "blockedPermissions": ["android.permission.RECORD_AUDIO"],
      "permissions": [
        "android.permission.READ_PHONE_STATE",
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS"
      ],
      "package": "com.ththanet.CallCreditChecker"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "826e79dd-cb52-4f2e-b0bf-7cc0f90bc717"
      }
    }
  }
}
